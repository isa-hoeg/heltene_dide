---
// Henter parametrene fra Astro.props
const { href="#", target="_self", variant= "textlink", size = "default", icon = null, iconHover = null } = Astro.props; 
 
//Definer den styling (Tailwind classes, der gør sig gældende for alle links
const linkStyling = "rounded-full text-sans inline-flex items-center gap-2"; 
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter 
const variantClasses = {
"textlink": "underline text-text", /* text-primary-500 */
"primary": "inline-block px-12 py-3 bg-accent text-offwhite cursor-pointer hover:scale-102 transition-all duration-500", /* border-primary-500 */
"secondary": "inline-block border-2 lg:border-4 px-16 py-4 border-accent bg-burnedorange100 hover:bg-accent text-accent hover:text-offwhite cursor-pointer hover:scale-102 transition-all duration-500" 
};
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
"default": "text-default", 
"large": "text-base lg:text-2xl",
"medium": "text-sm lg:text-lg",
"small": "text-base"
};


//Definer ikonstørrelse baseret på linkens størrelse
const iconSizeClasses = {
"default": "w-6 h-6",
"large": "w-8 h-8",
"medium": "w-6 h-6",
"small": "w-5 h-5"
};

const iconSize = iconSizeClasses[size];
---
<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<a href={href} target={target} class:list={[linkStyling, variantClasses[variant], sizeClasses[size], "group"]}>
  <slot />
  {icon && (
    <>
      <img src={icon} alt="icon" class:list={[iconSize, "icon-default group-hover:hidden"]} />
      {iconHover && <img src={iconHover} alt="icon hover" class:list={[iconSize, "icon-hover hidden group-hover:block"]} />}
    </>
  )}
</a>