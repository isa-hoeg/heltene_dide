	<!-- START PÅ ÅRSRAPPORT -->
<section class="container mx-auto mb-30 bg-secondary rounded-tl-md rounded-br-md rounded-tr-50 rounded-bl-50 2xl:max-width-bscreen intersect:animate-fade-left animate-once animate-duration-800ms">
  <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2">

